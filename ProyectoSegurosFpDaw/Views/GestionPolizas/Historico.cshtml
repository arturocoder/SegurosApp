@model ProyectoSegurosFpDaw.Models.GestionPoliza

@{
    ViewBag.Title = "Histórico Póliza";
}

@section css{
    <!-- Datatables -->
    <link href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <!-- Date range Picker -->
    <link href="~/plugins/daterangepicker/daterangepicker.css" rel="stylesheet" />
}

<!-- Header -->
<section class="fixedHeader-locked">
    <div col-sm-3>
        <div class="card card-gray ">
            <div class="card-header">
                <h2 class="card-title">PÓLIZAS</h2>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Historial de Gestiones. Póliza Id : <b>@ViewBag.polizaId </b> </h3>
                    <div class="card-tools">
                    </div>
                </div>
                <div class="card-body">
                    <table id="tableResultados" class="table table-bordered table-hover " style="width:100%">
                        <thead class="thead-light">
                            <tr>
                                <th>@Html.LabelFor(model => model.gestionPolizaId)</th>
                                <th>@Html.LabelFor(model => model.fechaGestion)</th>
                                <th>@Html.LabelFor(model => model.TipoGestion.nombreGestion)</th>
                                <th>@Html.LabelFor(model => model.Usuario.emailUsuario)</th>
                                <th>@Html.LabelFor(model => model.matricula)</th>
                                <th>@Html.LabelFor(model => model.marcaVehiculo)</th>
                                <th>@Html.LabelFor(model => model.fechaInicio)</th>
                                <th>@Html.LabelFor(model => model.CondicionadoPoliza.tipoCondicionado)</th>
                                <th>@Html.LabelFor(model => model.precio)</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ if (ViewBag.historicoLista != null)
                                {
                                    var listaGestiones = ViewBag.historicoLista as IList<ProyectoSegurosFpDaw.Models.GestionPoliza>;
                                    foreach (var item in listaGestiones)
                                    {
                                        <tr>
                                            <td>@item.gestionPolizaId</td>
                                            <td>@item.fechaGestion</td>
                                            <td>@item.TipoGestion.nombreGestion</td>
                                            <td>@item.Usuario.emailUsuario</td>
                                            <td>@item.matricula</td>
                                            <td>@item.marcaVehiculo @item.modeloVehiculo</td>
                                            <td>@item.fechaInicio.ToShortDateString() - @item.fechaFin.ToShortDateString()</td>
                                            <td>@item.CondicionadoPoliza.tipoCondicionado</td>
                                            <td>@item.precio</td>
                                            <td>@item.observaciones </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td>No hay datos coincidentes</td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    <div class="row mt-4">
                        <div class="col-6 col-sm-6 col-md-6">
                            <a href="@Url.Action("Details","GestionPolizas", new { id = ViewBag.gestionPolizaIdLast  })" class="btn btn-info float-left">
                                <i class="fas fa-reply"> </i>
                            </a>
                        </div>
                        <div class="col-6 col-sm-6 col-md-6">
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>
<!-- /.content -->

@section Scripts{
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Scripts/GestionPolizasHistoricoScript.js"></script>

}
