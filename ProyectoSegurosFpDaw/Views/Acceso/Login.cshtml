@{
    ViewBag.Title = "Login";
}

<section class="content ">
    <div class="row ml-4">
        <div class="login-box col-xs-12 col-sm-12 col-md-9 col-lg-7 col-xl-5">
            <div class="login-logo mt-4 ">
                <a href="@Url.Action("Login")"><b>Seguros</b>Ficticios</a>
            </div>
            <!-- /.login-logo -->
            <div class="card">
                <div class="card-body login-card-body">
                    <div class="row">
                        <span class="login-logo col-12 "><i class="fas fa-user-lock fa-align-center"></i></span>
                    </div>
                    @if (ViewBag.error != null)
                    {
                        <div class="alert alert-default-warning" role="alert">
                            @ViewBag.Error
                        </div>
                    }
                    @using (Html.BeginForm("Login", "Acceso", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="input-group mb-3">
                            @Html.TextBox("user",null, new { @class = "form-control", @placeholder="Email", @type="email"})
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            @Html.TextBox("Pass", null, new { @class = "form-control", @placeholder = "Password", @type = "password", @autocomplete = "off" })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn  btn-info btn-block">Entrar</button>
                            </div>
                        </div>
                    }
                </div>
                <!-- /.login-card-body -->
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-5 col-xl-7"></div>
    </div>    
    <!-- /.login-box -->
</section>